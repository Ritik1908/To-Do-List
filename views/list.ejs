<%- include("header") -%>
	<div class="box" id="heading">
		<h1>It's <%= listName %>.</h1>
	</div>

	<div class="box">
			<% newListItems.forEach(function(item){ %>
				<form action="/delete" method="POST">
					<div class="item">
						<input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= item._id %>">
						<p><%= item.name %></p>
					</div>
					<<input type="hidden" name="listName" value="<%= listName %>">
				</form>
			<% }); %>

		<form class="item" action = "/" method="POST">
			<input type = "text" name="newItem" placeholder="Enter New Item" autocomplete="off">
			<button type = "submit" name="listName" value='<%= listName %>'>+</button>
		</form>
	</div>
<%- include("footer") -%>
